<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4aedd2"
    tools:context="com.iesvirgendelcarmen.dam.material08b.material08b">

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EL RAPTO DE LAS SABINAS"
            android:textAlignment="center"
            android:textColor="#1e3bf7" />

        <ImageView
            android:id="@+id/imagen1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:scaleX="0.7"
            android:scaleY="0.8"
            android:src="@drawable/sabinas" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:marginTop="150dp"
            android:rating="5"
            android:scaleX="0.5"
            android:scaleY="0.5"
            />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="10dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAS HILANDERAS"
            android:textColor="#1e3bf7"
            android:textAlignment="center"/>
        <ImageView
            android:id="@+id/imagen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hilanderas"
            android:scaleType="centerCrop"
            android:scaleY="0.8"
            android:scaleX="0.7"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:rating="5"
            android:marginTop="150dp"/>

    </android.support.v7.widget.CardView>



</LinearLayout>
